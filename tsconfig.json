{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES5",
		"lib": ["es2015", "es2016"],
		"allowJs": false,
		"isolatedModules": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": false
	},
	"exclude": ["**/*.test.ts"]
}

