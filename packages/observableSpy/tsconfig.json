{
	"compilerOptions": {
		"module": "CommonJS",
		"rootDir": ".",
		"typeRoots": ["../../@types", "./node_modules/@types", "../../node_modules/@types"],
		"outDir": "dist",
		"target": "ES5",
		"lib": ["es2015", "es2016"],
		"allowJs": false,
		"isolatedModules": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": false
	}
}

